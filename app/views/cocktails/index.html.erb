<div class="main_title">
  <h1>Mr.Cocktail</h1>
  <p>Welcome to the Mr.Cocktail -the  best bar in the neighbourhood</p>
</div>
<%= link_to "Create new cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="card">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <%= link_to "Ingredients",  cocktail_path(cocktail)  %>
        </div>
      </div>
    <% end %>
    </div>
 </div>
